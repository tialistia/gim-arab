<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.client.dragdrop.Level2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ayat2"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <Button
        android:text="Level 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goToLevel3"
        android:layout_below="@+id/dropDua1"
        android:layout_alignRight="@+id/ayat2"
        android:layout_alignEnd="@+id/ayat2"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        android:visibility="invisible" />

    <TextView
        android:text="ألهامدوليلا هيروبل الامين"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropDua2"
        android:padding="20dp"
        android:textSize="25sp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/ayat2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropDua1"
        android:padding="20dp"
        android:textSize="25sp"
        android:background="@android:color/holo_blue_light"
        android:layout_alignTop="@+id/dropDua2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp" />
</RelativeLayout>
